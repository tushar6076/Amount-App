<HomeScreen>:
    name: "home"
    MDNavigationLayout:
        id: nav_layout
        MDScreenManager:
            id: screen_manager
            MDScreen:
                id: home_screen
                spacing: "8dp"
                MDTopAppBar:
                    id: top_app_bar
                    title: "Account Details"
                    md_bg_color: app.theme_cls.primary_color
                    specific_text_color: app.theme_cls.accent_color
                    pos_hint: {"top": 1}
                    left_action_items: [["menu", lambda x: root.menu_button()]]
                MDTextField:
                    id: search_input
                    hint_text: "Search Data...."
                    mode: "round"
                    size_hint_x: 0.8
                    pos_hint: {'center_x': 0.59, 'center_y': 0.95}
                    line_color_normal: app.theme_cls.primary_color
                    opacity: 0
                    on_text: root.search(self, self.text)
                MDIconButton:
                    id: search_button
                    icon: "magnify"
                    size: 0, 0
                    pos_hint: {"center_x": 0.95, "center_y": 0.95}
                    on_release: root.search_option()
                MDTabs:
                    id: tabs
                    on_tab_switch: root.on_tab_switch(*args)
                    size_hint_y: None
                    pos_hint: {"bottom": 0.1}
                    tab_display_mode: "text"  # Or "icons_with_text", etc.
                    allow_stretch: True
                    spacing: "8dp"
                    Tab:
                        title: "All Entries"
                        text: "all entries content"
                        BoxLayout:
                            orientation: "vertical"
                            spacing: "8dp"
                            padding: "8dp"
                            MDScrollView:
                                scroll_y: 0
                                smooth_scroll_end: 100

                                MDList:
                                    id: all_entry_list
                    Tab:
                        title: "Credit Entries"
                        text: "credit entries content"
                        BoxLayout:
                            orientation: "vertical"
                            spacing: "8dp"
                            padding: "8dp"
                            MDScrollView:
                                scroll_y: 0
                                smooth_scroll_end: 100

                                MDList:
                                    id: credit_entry_list
                    Tab:
                        title: "Debit Entries"
                        text: "debit entries content"
                        BoxLayout:
                            orientation: "vertical"
                            spacing: "8dp"
                            padding: "8dp"
                            MDScrollView:
                                scroll_y: 0
                                smooth_scroll_end: 100

                                MDList:
                                    id: debit_entry_list
                MDIconButton:
                    icon: "plus"
                    style: "tonal"
                    md_bg_color: app.theme_cls.primary_color
                    specific_text_color: app.theme_cls.accent_color
                    size_hint: None, None
                    size: "56dp", "56dp"
                    pos_hint: {"center_x": 0.9, "center_y": 0.15}
                    on_release: root.go_to_add_entry()

        MDNavigationDrawer:
            id: nav_drawer

            Navigation_Drawer:
                id: content_drawer