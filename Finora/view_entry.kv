<ViewEntryScreen>:
    name: "view_entry"
    MDScreen:
        MDTopAppBar:
            id: top_app_bar
            #md_bg_color: app.theme_cls.primary_color
            specific_text_color: app.theme_cls.accent_color
            pos_hint: {"top": 1}
            left_action_items: [["arrow-left", lambda x: root.home_button(x)],]
            right_action_items: [["pencil", lambda x: root.edit_entry_button()],["delete-forever", lambda x: root.delete_option()],]
            
        MDScrollView:
            pos_hint: {"top": 0.85}
            MDList:
                padding: dp(20)
                spacing: dp(50)
                id: md_list
                MDLabel:
                    id: person_name
                MDLabel:
                    id: branch_name
                MDLabel:
                    id: transaction_date
                MDLabel:
                    id: amount
                MDLabel:
                    id: transaction_type
                MDLabel:
                    id: transaction_method
                MDLabel:
                    id: received_by