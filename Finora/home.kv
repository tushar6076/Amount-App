<HomeScreen>:
    name: "home"
    MDNavigationLayout:
        id: nav_layout
        MDScreenManager:
            id: screen_manager
            MDScreen:
                id: home_screen
                MDTopAppBar:
                    id: top_app_bar
                    title: "Transactions"
                    #md_bg_color: app.theme_cls.primary_color
                    specific_text_color: app.theme_cls.accent_color
                    pos_hint: {"top": 1}
                    left_action_items: [["menu", lambda x: root.menu_button()]]
                MDTextField:
                    id: search_input
                    hint_text: "Search Data...."
                    mode: "round"
                    size_hint_x: 0.8
                    pos_hint: {'center_x': 0.59, 'center_y': 0.95}
                    line_color_normal: app.theme_cls.accent_color
                    opacity: 0
                    on_text: root.search(self, self.text)
                MDIconButton:
                    id: search_button
                    icon: "magnify"
                    theme_text_color: "Custom"
                    text_color: app.theme_cls.accent_color
                    pos_hint: {"center_x": 0.93, "center_y": 0.95}
                    on_release: root.search_option()
                MDTabs:
                    id: tabs
                    on_tab_switch: root.on_tab_switch(*args)
                    size_hint_y: None
                    pos_hint: {"top": 0.92}
                    tab_display_mode: "text"  # Or "icons_with_text", etc.
                    allow_stretch: True
                    spacing: "8dp"
                    Tab:
                        title: "All Entries"
                                    
                    Tab:
                        title: "Credit Entries"

                    Tab:
                        title: "Debit Entries"

                MDScrollView:
                    pos_hint: {"top": 0.84}
                    size_hint_y: 0.84
                    MDList:
                        id: entry_list
                        padding: dp(10)
                        size_hint_y: None
                        adaptive_height: True

                MDIconButton:
                    id: add_entry_button
                    icon: "plus"
                    style: "tonal"
                    md_bg_color: 0, 0.5, 0.5, 1
                    theme_text_color: "Custom"
                    text_color: 1, 1, 1, 1 #app.theme_cls.accent_color
                    size_hint: None, None
                    size: "56dp", "56dp"
                    pos_hint: {"center_x": 0.85, "center_y": 0.075}
                    on_release: root.go_to_add_entry()

        MDNavigationDrawer:
            id: nav_drawer

            Navigation_Drawer:
                id: content_drawer